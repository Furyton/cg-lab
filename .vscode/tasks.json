{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile",
			"command": "C:\\tmp\\MINGW\\mingw32\\bin\\g++.exe",
			"args": [
				"-g",
				"-std=c++17",
				"${fileDirname}/\\*.cpp",
				"${workspaceFolder}/src/glad.c",
				"-I",
				"${workspaceFolder}\\include",
				"-L${workspaceFolder}\\lib",
				"-lglfw3dll",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Compile"
			],
			"label": "Compile and Run"
		}
	]
}